local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "Jump Map Power Level Test",
   LoadingTitle = "Jump Map Power Level Test",
   LoadingSubtitle = "by íŒŒ",
   ConfigurationSaving = {Enabled = false}
})

local Tab = Window:CreateTab("Main", 4483362458)

Tab:CreateSection("Admin")

Tab:CreateButton({
   Name = "Admin Gui",
   Callback = function()
      local gui = game.Players.LocalPlayer.PlayerGui:FindFirstChild("Admin")
      if gui then gui.Enabled = not gui.Enabled end
   end
})

Tab:CreateSection("Troll")

Tab:CreateButton({
   Name = "Kick All",
   Callback = function()
      for _, plr in game.Players:GetPlayers() do
         if plr ~= game.Players.LocalPlayer then
            game.ReplicatedStorage:WaitForChild("Kick"):FireServer(plr)
         end
      end
   end
})

Tab:CreateButton({
   Name = "Bomb All",
   Callback = function()
      for _, plr in game.Players:GetPlayers() do
         if plr ~= game.Players.LocalPlayer then
            game.ReplicatedStorage.bomb:FireServer(plr)
         end
      end
   end
})

Tab:CreateButton({
   Name = "Ban All",
   Callback = function()
      for _, plr in game.Players:GetPlayers() do
         if plr ~= game.Players.LocalPlayer then
            pcall(function()
               game.ReplicatedStorage:WaitForChild("Ban"):FireServer(plr.UserId)
            end)
         end
      end
   end
})

Tab:CreateSection("Aura")

local kickAura, bombAura, banAura = false, false, false
local kickDist, bombDist, banDist = 16, 16, 16

Tab:CreateToggle({Name = "Kick Aura", CurrentValue = false, Callback = function(v) kickAura = v end})
Tab:CreateSlider({Name = "Kick Aura Range", Range = {1,1000}, Increment = 1, Suffix = "Stud", CurrentValue = 16, Callback = function(v) kickDist = v end})

Tab:CreateToggle({Name = "Bomb Aura", CurrentValue = false, Callback = function(v) bombAura = v end})
Tab:CreateSlider({Name = "Bomb Aura Range", Range = {1,1000}, Increment = 1, Suffix = "Stud", CurrentValue = 16, Callback = function(v) bombDist = v end})

Tab:CreateToggle({Name = "Ban Aura", CurrentValue = false, Callback = function(v) banAura = v end})
Tab:CreateSlider({Name = "Ban Aura Range", Range = {1,1000}, Increment = 1, Suffix = "Stud", CurrentValue = 16, Callback = function(v) banDist = v end})

task.spawn(function()
   while true do
      local hrp = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
      if hrp then
         for _, plr in game.Players:GetPlayers() do
            if plr ~= game.Players.LocalPlayer and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
               local d = (plr.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
               if kickAura and d <= kickDist then game.ReplicatedStorage.Kick:FireServer(plr) end
               if bombAura and d <= bombDist then game.ReplicatedStorage.bomb:FireServer(plr) end
               if banAura and d <= banDist then pcall(function() game.ReplicatedStorage.Ban:FireServer(plr.UserId) end) end
            end
         end
      end
      task.wait(0.1)
   end
end)
